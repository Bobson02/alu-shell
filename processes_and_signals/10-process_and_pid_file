#!/usr/bin/env bash
# Define the function to handle SIGTERM signal
sigterm_handler() {
    echo "I hate the kill command"
}

# Define the function to handle SIGINT signal
sigint_handler() {
    echo "Y U no love me?!"
}

# Define the function to handle SIGQUIT signal
sigquit_handler() {
    # Remove the PID file
    rm -f /var/run/myscript.pid
    # Terminate the script
    exit 0
}

# Trap signals and associate them with corresponding handler functions
trap 'sigterm_handler' SIGTERM
trap 'sigint_handler' SIGINT
trap 'sigquit_handler' SIGQUIT

# Get the PID of the current script
echo $$ > /var/run/myscript.pid

# Display "To infinity and beyond indefinitely" indefinitely
while true; do
    echo "To infinity and beyond indefinitely"
    sleep 2
done
